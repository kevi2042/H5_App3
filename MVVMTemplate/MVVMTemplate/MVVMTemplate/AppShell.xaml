            <ShellContent Title="Items" Route="ItemsPage" ContentTemplate="{DataTemplate local:ItemsPage}"/>
            <ShellContent Title="New Item" Route="NewItemPage" Icon="dog.png" ContentTemplate="{DataTemplate local:NewItemPage}" />
