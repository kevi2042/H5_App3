<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behavior="clr-namespace:AppProjekt.Behaviors"
             xmlns:viewmodel="clr-namespace:AppProjekt.ViewModels"
             x:Class="AppProjekt.Views.DoorPage">
    
    
    
    
    <ContentPage.Content>
        <StackLayout x:DataType="viewmodel:DoorViewModel">
            <Entry Text="{Binding EntryContent, Mode=TwoWay}" FontSize="Medium">
                <Entry.Behaviors>
                    <behavior:EntryValidationBehavior></behavior:EntryValidationBehavior>
                </Entry.Behaviors>
            </Entry>
            <Button Text="Send Command" Command="{Binding SendToDoor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>